@import '//fonts.googleapis.com/css?family=Patua+One|Crete+Round|Damion'
@import '//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'

html, body
	min-width 25rem
	height 100%
	margin 0
	padding 0

	font-family Crete Round

	// diagonally striped background
	a = #bfe4
	b = #bef4
	stripe-size = 0.5rem
	background repeating-linear-gradient(
		-45deg, a, a stripe-size, b stripe-size, b (stripe-size * 2))

a
	text-decoration none
	color #048

// links to tools aren't as important, so make them darker
a.lk
	color #024

// Allows us to put a <ul> inside a <p>.
.inline-list-container
	p
		display inline

ul.inline, ul.used
	padding 0
	margin 0 0.5em

	display inline

	li
		display inline-block

	li:after
		content "Â·"
		margin 0 0.25em
		color #8
	li:last-child:after
		content none

ul.used::before
	content "used: "
	color #ccc
	inline()

body > header
	background #f
	overflow auto
	text-align center

	box-shadow 0 0.25rem 0.25rem #8
	margin-bottom 1em

	#name
		font-family Damion
		font-size 3rem
		margin-top -0.35em
		margin-bottom -0.25em
		a
			color #e60

	nav
		margin-top -1em

		a
			display inline-block
			font-size 125%
			font-style normal
			font-weight bold

			margin 0 1em
			color #06e

body > main
	h1
		margin 0
		font-family Patua One
		font-weight normal
		color #800

		// icon next to the text
		.fa
			color #6a0

	section
		bs = 0.125rem
		box-shadow bs bs bs #8

		margin 1em 0.1em
		padding 0.5em
		background #f
		border-radius 2em

		h1
			margin-left 0.8em
